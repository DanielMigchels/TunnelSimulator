FROM node:22 AS angular-build
WORKDIR /app
COPY ./TunnelSimulator.UI ./TunnelSimulator.UI
WORKDIR /app/TunnelSimulator.UI
RUN npm install
# RUN npm audit
RUN npm run build

FROM debian:bookworm-slim AS certgen
RUN apt-get update \
	&& apt-get install -y --no-install-recommends openssl ca-certificates \
	&& rm -rf /var/lib/apt/lists/*

ARG CERT_PASSWORD=password

RUN openssl req -x509 -nodes -newkey rsa:2048 -sha256 -days 3650 \
	-subj "/CN=localhost" \
	-addext "subjectAltName=DNS:localhost,IP:127.0.0.1" \
	-keyout /tmp/https.key \
	-out /tmp/https.crt \
	&& openssl pkcs12 -export \
	-out /https.pfx \
	-inkey /tmp/https.key \
	-in /tmp/https.crt \
	-passout pass:${CERT_PASSWORD} \
	&& rm -f /tmp/https.key /tmp/https.crt

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS dotnet-build
WORKDIR /src
COPY ./TunnelSimulator.API .
RUN dotnet restore "TunnelSimulator.API/TunnelSimulator.API.csproj"
RUN dotnet publish "TunnelSimulator.API/TunnelSimulator.API.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS final
WORKDIR /app
COPY --from=angular-build /app/TunnelSimulator.UI/dist /app/wwwroot
COPY --from=dotnet-build /app/publish .

ARG CERT_PASSWORD=password
ENV ASPNETCORE_URLS=https://+:8443
ENV ASPNETCORE_Kestrel__Certificates__Default__Path=/app/https.pfx
ENV ASPNETCORE_Kestrel__Certificates__Default__Password=${CERT_PASSWORD}

COPY --from=certgen /https.pfx /app/https.pfx
EXPOSE 8080 8443
ENTRYPOINT ["dotnet", "TunnelSimulator.API.dll"]
